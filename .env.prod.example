# Production Environment Variables

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# UGC Database
UGC_DATABASE_URL=postgresql://ugc_user:secure_password@ugc-postgres:5432/ugc_db
UGC_DB_NAME=ugc_db
UGC_DB_USER=ugc_user
UGC_DB_PASSWORD=secure_password

# Users Database
USERS_DATABASE_URL=postgresql://users_user:secure_password@users-postgres:5432/users_db
USERS_DB_NAME=users_db
USERS_DB_USER=users_user
USERS_DB_PASSWORD=secure_password

# Catalog Database
CATALOG_DATABASE_URL=postgresql://catalog_user:secure_password@catalog-postgres:5432/catalog_db
CATALOG_DB_NAME=catalog_db
CATALOG_DB_USER=catalog_user
CATALOG_DB_PASSWORD=secure_password

# Offers Database
OFFERS_DATABASE_URL=postgresql://offers_user:secure_password@offers-postgres:5432/offers_db
OFFERS_DB_NAME=offers_db
OFFERS_DB_USER=offers_user
OFFERS_DB_PASSWORD=secure_password

# External Services
ELASTICSEARCH_URL=http://elasticsearch:9200
REDIS_URL=redis://redis:6379

# Telemetry
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Logging
RUST_LOG=warn

# Apollo Router
APOLLO_ROUTER_LOG=warn
APOLLO_ROUTER_VALIDATION_ENABLED=true
ENVIRONMENT=production